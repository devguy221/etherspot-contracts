{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
